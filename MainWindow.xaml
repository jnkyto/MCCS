<Window x:Class="MCCS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCCS"
        mc:Ignorable="d"
        Title="MCCS - Minecraft Chat Search" Height="800" Width="800">
    <Grid Background="LightSlateGray">
        <TextBlock Text="This button will copy your logs to a new folder, decompress them, and remove the .gz archives. Original logs folder will not be modified." Margin="0,10,0,709" HorizontalAlignment="Center"></TextBlock>
        <Button Margin="320,43,320,686" Name="decomp" Content="Decompress!" Click="decomp_Click"></Button>
    </Grid>
</Window>
